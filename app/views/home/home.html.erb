                        <%= link_to 'Read More', @blogs[1], class: 'btn btn-primary' %>
                        <% if current_user && is_admin? %>
                        <%= link_to 'Edit', edit_blog_path(@blogs[1]), class: 'btn btn-warning', :'data-no-turbolink' => true %>
                        <%= link_to 'Destroy', @blogs[1], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
