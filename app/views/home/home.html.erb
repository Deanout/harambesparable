<div class="jumbotron col-lg-4 col-lg-offset-1 mem-text">
    <h1 class="col-lg-10 col-lg-offset-1" style="text-align:center;">Recent Memories</h1>
    <% @memories = Memory.last(4).reverse %>
    <% @memories.each do |memory| %>
    <div class="panel-heading">
        <h3><%= link_to  memory.title, memory %></h3>
        <h6><%= "Posted by #{User.find(memory.user_id).username}, " %><%= memory.created_at.strftime("%B, %d, %Y") %></h6>
    </div>
    <div class="panel-body"style="text-align:justify">
        <%= raw memory.body.truncate_words(60) %>
    </div>
    <% end %>
</div>

<div class="jumbotron col-lg-10 blog-text">

    <div class="jumbotron col-lg-5 col-lg-offset-1">
        <div class="panel">
            <div class="panel-heading">
                <h3><%= link_to  @blogs[0].title, @blogs[0] %></h3>
                <h6><%= "Posted by #{User.find(@blogs[0].user_id).username}, " %><%= @blogs[0].created_at.strftime("%B, %d, %Y") %></h6>
            </div>
            <div class="panel-body"style="text-align:justify">
                <%= raw @blogs[0].body.truncate_words(350) %>
            </div>
            <div class="panel-footer">
                <div class="container-fluid">
                    <div class="pull-right">
                        <%= link_to 'Read More', @blogs[0], class: 'btn btn-primary' %>
                        <% if current_user && is_admin? %>
                        <%= link_to 'Edit', edit_blog_path(@blogs[0]), class: 'btn btn-warning', :'data-no-turbolink' => true %>
                        <%= link_to 'Destroy', @blogs[0], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="jumbotron col-lg-5 col-lg-offset-1">
        <div class="panel">
